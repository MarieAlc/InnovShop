{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="form">
        <h1 class="form-title">Connectez-vous</h1>

       
        <form method="post">
            <div class="form-group">
                <label for="inputEmail">Adresse mail</label>
                <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="_password" id="inputPassword" required>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn" type="submit">Connexion</button>
        </form>

        <div class="connexion-link">
            <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
            <p> <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a></p>
        </div>
    </section>
{% endblock %}
