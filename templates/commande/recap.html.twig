{% extends 'base.html.twig' %}

{% block title %}Récapitulatif de commande{% endblock %}

{% block body %}
<h1 class="text-xl font-bold mb-4">Récapitulatif de votre commande</h1>

<table class="table-auto w-full border mb-6">
    <thead>
        <tr>
            <th class="border px-4 py-2">Article</th>
            <th class="border px-4 py-2">Taille</th>
            <th class="border px-4 py-2">Couleur</th>
            <th class="border px-4 py-2">Prix</th>
        </tr>
    </thead>
    <tbody>
        {% for ligne in panier %}
            <tr>
                <td class="border px-4 py-2">{{ ligne.article.titre }}</td>
                <td class="border px-4 py-2">{{ ligne.taille }}</td>
                <td class="border px-4 py-2">{{ ligne.couleur }}</td>
                <td class="border px-4 py-2">{{ ligne.article.prix }} €</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<p class="text-right text-lg font-semibold mb-6">Total : {{ total }} €</p>

<h2 class="text-lg font-bold mb-2">Adresse de livraison</h2>

{{ form_start(form) }}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {{ form_row(form.numero) }}
        {{ form_row(form.rue) }}
        {{ form_row(form.codePostal) }}
        {{ form_row(form.ville) }}
    </div>
    <button type="submit" class="mt-4 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded">
        Valider la commande
    </button>
{{ form_end(form) }}

{% endblock %}
