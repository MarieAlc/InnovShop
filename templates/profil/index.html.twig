{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
        
<div class="profil-container">
  <h1 class="profil-title">Mon profil</h1>

  <div class="profil-grid">
    <div class="profil-infos">
      <h2>Mes informations</h2>
      <p><strong>Nom :</strong> {{ user.nom }}</p>
      <p><strong>Prenom :</strong> {{ user.prenom }}</p>
      <p><strong>Mail :</strong> {{ user.email }}</p>
      <p><strong>Téléphone :</strong> {{ user.telephone }}</p>
    </div>

    <div class="profil-actions">
      <a href="{{ path('profil_edit') }}" class="profil-link">✏️ Modifier mes infos</a>
      <a href="{{ path('change_password') }}" class="profil-link">🔐 Changer mon mot de passe</a>
      <a href="{{ path('profil_commandes') }}" class="profil-link">📦 Voir mes commandes</a>
      <a href="{{ path('delete_profil') }}" class="profil-link danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?')">🗑️ Supprimer mon compte</a>
    </div>
  </div>
</div>

{% endblock %}
