{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">

    <!-- Commandes en cours -->
    <h2 class="mb-3">Commandes en cours</h2>
    {% set enCours = commandes|filter(c => c.status not in ['livree', 'annulée']) %}
    {% if enCours is empty %}
        <p>Aucune commande en cours.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Commande n°</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Total</th>
                    <th>Détail</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in enCours %}
                    <tr>
                        <td>{{ commande.id }}</td>
                        <td>{{ commande.createdAt|date('d/m/Y') }}</td>
                        <td>{{ commande.statusLabel }}</td>
                        <td>{{ commande.total|number_format(2, ',', ' ') }} €</td>
                        <td>
                            <a href="{{ path('commande_detail', {'id': commande.id}) }}" class="btn btn-primary btn-sm">Détails</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <hr class="my-5">

    <!-- Commandes livrées -->
    <h2 class="mb-3">Vos anciennes commandes</h2>
    {% set anciennes = commandes|filter(c => c.status == 'livree') %}
    {% if anciennes is empty %}
        <p>Vous n'avez pas encore de commande livrée.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Commande n°</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Détail</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in anciennes %}
                    <tr>
                        <td>{{ commande.id }}</td>
                        <td>{{ commande.createdAt|date('d/m/Y') }}</td>
                        <td>{{ commande.total|number_format(2, ',', ' ') }} €</td>
                        <td>
                            <a href="{{ path('commande_detail', {'id': commande.id}) }}" class="btn btn-secondary btn-sm">Détails</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <hr class="my-5">

    <!-- Commandes annulées -->
    <h2 class="mb-3">Commandes annulées</h2>
    {% set annulees = commandes|filter(c => c.status == 'annulée') %}
    {% if annulees is empty %}
        <p>Aucune commande annulée.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Commande n°</th>
                    <th>Date</th>
                    <th>Statut</th>
                    <th>Total</th>
                    <th>Détail</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in annulees %}
                    <tr>
                        <td>{{ commande.id }}</td>
                        <td>{{ commande.createdAt|date('d/m/Y') }}</td>
                        <td>{{ commande.statusLabel }}</td>
                        <td>{{ commande.total|number_format(2, ',', ' ') }} €</td>
                        <td>
                            <a href="{{ path('commande_detail', {'id': commande.id}) }}" class="btn btn-outline-danger btn-sm">Détails</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

</div>
{% endblock %}
