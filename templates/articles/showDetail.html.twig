{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}

<h1>{{ article.titre }}</h1>
<img src="{{ asset('uploads/articles/' ~ article.image) }}" alt="{{ article.titre }}" class="img-fluid rounded shadow" style="max-width: 400px; height: 300px; object-fit: cover;">

<p>{{ article.detail }}</p>
<p><strong>Prix :</strong> {{ article.prix }} â‚¬</p>

<form method="post" action="{{ path('ajoutPanier', { id: article.id }) }}">
  <div class="mb-3">
    <label for="taille" class="form-label">Taille :</label>
    <select name="taille" id="taille" class="form-select">
      {% for taille in article.tailles %}
        <option value="{{ taille.id }}">{{ taille.valeur }}</option>
      {% endfor %}
    </select>
  </div>

  <div class="mb-3">
    <label for="couleur" class="form-label">Couleur :</label>
    <select name="couleur" id="couleur" class="form-select">
      {% for couleur in article.couleurs %}
        <option value="{{ couleur.id }}">{{ couleur.valeur }}</option>
      {% endfor %}
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Ajouter au panier ðŸ›’</button>
</form>
{% endblock %}
