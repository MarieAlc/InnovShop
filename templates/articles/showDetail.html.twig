{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
    <h1>{{ article.titre }}</h1>
<section class="fiche-article">
  <img src="{{ asset('uploads/articles/' ~ article.image) }}" alt="{{ article.titre }}" class="fiche-image">

  <div class="fiche-infos">
    <p class="prix">{{ article.prix }} â‚¬</p>

    <p class="spec">{{ article.specification }}</p>
    <p class="detail">{{ article.detail }}</p>

    <form method="post" action="{{ path('ajoutPanier', { id: article.id }) }}" class="fiche-form">
      <div class="filtre-group">
        <label for="taille">Taille :</label>
        <select name="taille" id="taille">
          {% for taille in article.tailles %}
            <option value="{{ taille.id }}">{{ taille.valeur }}</option>
          {% endfor %}
        </select>
      </div>

      <div class="filtre-group">
        <label for="couleur">Couleur :</label>
        <select name="couleur" id="couleur">
          {% for couleur in article.couleurs %}
            <option value="{{ couleur.id }}">{{ couleur.valeur }}</option>
          {% endfor %}
        </select>
      </div>

      <button type="submit" class="btn">Ajouter au panier ðŸ›’</button>
    </form>
  </div>
</section>
{% endblock %}